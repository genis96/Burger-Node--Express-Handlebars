<div class="container">
    <div class="jumbotron">
        <img class="img" src="/public/assets/images/burger.png" alt="">
        <h1>Eat The Burger</h1>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <h2>Burgers To Eat</h2>
            <div class="panel-panel default">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            <h2>Burgers Eaten</h2>
            <div class="panel-panel default">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-10 col-md-offset-1">
        <h2>Add a Burger</h2>
        <form id="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
            <input type="hidden" name="devoured" value="0">
        </div>

        <button class="btn btn-warning btn-lg" type="submit">Add Burger</button>
        </form>
    </div>

</div>